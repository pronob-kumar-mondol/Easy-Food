<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_meal_catagory"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_meal_catagory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Catagory"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        android:fontFamily="@font/myfont"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="@id/img_meal_catagory"
        app:layout_constraintEnd_toEndOf="@id/img_meal_catagory"
        app:layout_constraintTop_toBottomOf="@id/img_meal_catagory"/>

</androidx.constraintlayout.widget.ConstraintLayout>